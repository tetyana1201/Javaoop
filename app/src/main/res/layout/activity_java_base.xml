<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pho"
    tools:context=".JavaBase">

    <!-- Your interface layout for the "Java Base" activity here -->

    <Button
        android:id="@+id/basicConceptsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Основні поняття"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dataTypesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Типи даних"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/basicConceptsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/operatorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оператори"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dataTypesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/methodsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Методи"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/operatorsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/booleanOperationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Булеві операції"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/methodsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/conditionalStatementsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Умовні оператори"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/booleanOperationsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/loopsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цикли"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/conditionalStatementsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/arraysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Масиви"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/loopsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/stringsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рядки"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/arraysButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
